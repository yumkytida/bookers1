<h2>Books</h2>
<table>
	<thead>
		<tr>
		<th>Title</th>
		<th>Body</th>
		</tr>
	</thead>
	<tbody>
		<% @books.each do |book| %>
		<tr>
		  <td><%= book.title %></td>
		  <td><%= book.body %></td>
		  <td><%= link_to "Show", book_path(book.id) %></td>
		  <td><%= link_to "Edit",edit_book_path(book) %></td>
		  <td><%= link_to "Destroy",book_path(book.id),method: :delete, data:{confirm: "Are you sureï¼Ÿ"} %></td>
		</tr>
		<% end %>
	</tbody>
</table>



<h4>New book</h4>

<% if @book.errors.any? %>
  <div class="alert alert-warning">
    <ul>
      <%= @book.errors.count %>errors
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for(@book) do |f| %>
	<h5>title</h5>
	<%= f.text_field :title %>

	<h5>text</h5>
	<%= f.text_area :body %>

	<%= f.submit 'Create Book' %>


<% end %>