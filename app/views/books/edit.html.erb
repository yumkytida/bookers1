<h4>Editing Book</h4>

<% if @book.errors.any? %>
  <div class="alert alert-warning">
    <ul>
      <%= @book.errors.count %>errors
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for(@book) do |f| %>
	<h5>title</h5>
	<%= f.text_field :title %>

	<h5>body</h5>
	<%= f.text_area :body %>

	<%= f.submit 'Update Book' %>


<% end %>
<%= link_to "Show", book_path(@book) %>
| <%= link_to "Back",books_path %>